<?xml version="1.0" encoding="UTF-8"?>
<response>
<info>

<name>${service.name}</name>
<title>${service.title}</title>
<description>${service?.description?.escapeXml()}</description>
<cite>${service?.cite?.escapeXml()}</cite>

<input>
#{list service.fields() }
<argument>
	<name>_.name</name>
	<label>_.label?.escapeXml()</label>
	<type>_.type?.escapeXml()</type>
	<choices>_.choices?.escapeXml()</choices>
	<defvalue>_.value?.escapeXml()</defvalue>
</argument>
#{/list}
</input>
</info>
</response>