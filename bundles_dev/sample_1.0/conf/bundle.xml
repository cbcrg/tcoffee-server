<?xml version="1.0" encoding="UTF-8"?>

<bundle name="sample" version="1.0.1" >
	<title>Sample</title>
	<description>A sample bundle</description>

  <service name="basic"  >
    <title>Basic Command </title>
 	<group>Alignment</group>      
    <description>A basic server bundle</description>
    
    <input>
      <fieldset >
        <title>Your command</title>
    	<description>A basic game example</description>
      
        <field type="text" name="path" label="Path to list" /> 
      </fieldset>
    </input>
    
    <process>
		<exec program="ls -la ${path}" />
    </process>
  </service>
  
 <service name="groovy"  >
    <title>Groovy Command </title>
